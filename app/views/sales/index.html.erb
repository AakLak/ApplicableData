<div class="col-lg-1 col-xs-1"></div>
<div class="col-lg-10 col-xs-10">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><i class="fa fa-sticky-note-o"></i> Listing Sales</h3>
    </div> 

    <div class='box-body'>
      <table class="table table-hover table-bordered">

        <thead>
          <tr>
            <th>Email</th>
            <th>Order date</th>
            <th>Amount</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <div class="center_me">
            <%= will_paginate @sales, inner_window: 2 %>
          </div>
          <% @sales.each do |sale| %>
          <tr>
            <td><%= sale.email %></td>
            <td><%= sale.order_date %></td>
            <td><%= sale.amount %></td>
            <td><%= link_to 'Show', sale, class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_sale_path(sale), class: "btn btn-success" %></td>
            <td><%= link_to 'Destroy', sale, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>

        </tbody> 

      </table>
      <div class="center_me">
        <%= will_paginate @sales, inner_window: 2 %>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-3 col-xs-3"></div>