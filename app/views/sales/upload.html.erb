<% if user_signed_in? %>
<div class="col-md-6">
	<div class="panel panel-primary">
		<div class="panel-heading"><h2>Import Local File</h2></div>
		<div class="panel-body">
			<%= form_tag import_csv_test_sales_path, multipart: true do %>
  			<%= file_field_tag :file %>
  			<br><br>
  			<%= button_tag "Upload", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Uploading..."} %>
        <%= hidden_field_tag :user_id , @user_id %>
			<% end %>
		</div>
	</div>
</div>


<div class="col-md-6"><div class="panel panel-primary">

  <div class="panel-heading">
    <h2>Import via FTP</h2>
  </div>
  <div class="panel-body">
    <%= form_tag import_ftp_sales_path, multipart: true do %>

      <%= label_tag :domain %>
      <%= text_field_tag :domain, params[:domain], placeholder: "/invoices/2016/" %>
      <br>
      <%= label_tag :directory %>
      <%= text_field_tag :directory, params[:directory] %>
      <br>
      <%= label_tag :ftp_user %>
      <%= text_field_tag :ftp_user, params[:ftp_user] %>
      <br>
      <%= label_tag :ftp_password %>
      <%= text_field_tag :ftp_password, params[:ftp_password] %>
      <br>
      <%= submit_tag "Import FTP File", :class => "btn btn-primary" %>
    <% end -%>
  </div>

</div></div>

<% else %>

<p class="alert alert-danger">You must be signed in to view this page</p>

<% end %>