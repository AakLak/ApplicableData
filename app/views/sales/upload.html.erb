<div class="col-md-6">
	<div class="panel panel-primary">
		<div class="panel-heading"><h2>Import Local File</h2></div>
		<div class="panel-body">
			<%= form_tag import_csv_sales_path, multipart: true do %>
			<%= file_field_tag :file, :class => "" %>
			<br><br>
			<%= submit_tag "Upload", :class => "btn btn-primary" %>
			<% end %>
			<%= link_to 'New Sale', new_sale_path %>
		</div>
	</div>
</div>

<div class="col-md-6"><div class="panel panel-primary">

	<div class="panel-heading">
		<h2>Import via FTP</h2>
	</div>
	<div class="panel-body">
		<%= form_tag import_ftp_sales_path, multipart: true do %>

			<%= label_tag :domain %>
      <%= text_field_tag :domain, params[:domain] %>
      <br>
      <%= label_tag :ftp_user %>
      <%= text_field_tag :ftp_user, params[:ftp_user] %>
      <br>
      <%= label_tag :ftp_password %>
      <%= text_field_tag :ftp_password, params[:ftp_password] %>
      <br>
      <%= submit_tag "Import FTP File", :class => "btn btn-primary" %>
    <% end -%>
	</div>

</div></div>