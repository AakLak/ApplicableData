<div class="col-lg-3"></div>
<div class="col-lg-6">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><i class="fa fa-upload"></i> Upload via FTP</h3>
    </div> 
    <div class="box-body">
      <%= form_tag import_ftp_sales_path,  multipart: true do %>
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :ftp_user, 'FTP User' %>
            <%= text_field_tag :ftp_user, params[:ftp_user], placeholder: 'admin', class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :ftp_password, 'FTP Password' %>
            <%= password_field_tag :ftp_password, params[:ftp_password], class: "form-control", placeholder: '••••••••' %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :domain %>
            <%= text_field_tag :domain, params[:domain], placeholder: "ftp.applicabledata.com", class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :directory %>
            <%= text_field_tag :directory, params[:directory], placeholder: "/invoices/2016/", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="box-footer">
        <%= submit_tag "Import FTP File", :class => "pull-right btn btn-primary" %>
      </div>
      <%= hidden_field_tag :user_id , @user_id %>
      <% end -%>
    </div>
  </div>
</div>
<div class="col-lg-3 col-xs-3"> </div>